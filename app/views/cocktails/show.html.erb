<h1><%= @cocktail.name %></h1>
<h4>Ingredients:</h4>
<ul>
  <% @cocktail.doses.each do |d| %>
    <li><%= d.ingredient.name %>: <%= d.description %> (<%= link_to "Delete", dose_path(d), method: :delete, data: { confirm: "Are you sure?" } %>)</li>
  <% end %>
</ul>

<%= link_to "Add new doses", new_cocktail_dose_path(@cocktail) %><br>
<%= link_to "See all cocktails", root_path %>
